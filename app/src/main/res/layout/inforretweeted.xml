<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <com.example.a49066.weireaderlight.MyRoundImage
                android:id="@+id/retweeted_head"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/retweeted_name"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/retweeted_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="17sp"
            android:autoLink="all"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <com.example.a49066.weireaderlight.MyImageView
                android:id="@+id/retweeted_image1"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <com.example.a49066.weireaderlight.MyImageView
                android:id="@+id/retweeted_image2"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <com.example.a49066.weireaderlight.MyImageView
                android:id="@+id/retweeted_image3"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
        <com.example.a49066.weireaderlight.MyImageView
            android:id="@+id/retweeted_image4"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <com.example.a49066.weireaderlight.MyImageView
            android:id="@+id/retweeted_image5"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <com.example.a49066.weireaderlight.MyImageView
            android:id="@+id/retweeted_image6"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <com.example.a49066.weireaderlight.MyImageView
                android:id="@+id/retweeted_image7"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <com.example.a49066.weireaderlight.MyImageView
                android:id="@+id/retweeted_image8"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <com.example.a49066.weireaderlight.MyImageView
                android:id="@+id/retweeted_image9"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>